<% form_tag( {:controller => :navigation, :action => :update_nav}, :method => :get, :name => :nav_form) do %>
<table>
	<tr>
		<% @nav_models.each do |mod| %>
			<td>
			<h3><%= link_to mod.name.capitalize, :controller => 'navigation', :action => 'edit', :id => mod.id %></h3><br>
			<ul>
				<table>
					<tr>
						<td><li>Included?:</td> <td><%= mod.included %></li></td>
					</tr>
					<tr>
						<td><li>Controller:</td> <td><%= mod.controller %></li></td>
					</tr>	
					<tr>
						<td><li>Display Name:</td> <td><%= mod.display_name %></li></td>
					</tr>	
					<tr>
						<td><li>Display Count?:</td> <td><%= mod.display_count %></li></td>
					</tr>
				</table>
			</ul>
			<h4>Attributes:</h4><br>
			<% mod.nav_attributes.each do |attrib| %>
				<h5><%= attrib.name %></h5>
				<ul>
					<table>
						<tr>
							<td><li>Included?:</td> <td><%= attrib.included %></li></td>
						</tr>
						<tr>
							<td><li>Display Name:</td> <td><%= attrib.display_name %></li></td>
						</tr>
						<tr>
							<td><li>Display Count?:</td> <td><%= attrib.display_count %></li></td>
						</tr>
						<tr>
							<td><li>Range?:</td> <td><%= attrib.range %></li></td>
						</tr>
						<tr>
							<td>
								<% attrib.nav_display_values.each do |display_value| %>
									<%= display_value.value %> : <%= display_value.nav_database_value.value %>
								<% end %><br>
							</td>
						</tr>
					</table>
				</ul>
			<% end %>
			</td>
		<% end %>
	</tr>
</table>
<%#= submit_tag 'Update' %>
<% end %> 